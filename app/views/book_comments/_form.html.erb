  <% book.book_comments.each do |book_comment| %>
  <table class= "table">
    <tr>

    <td><%= link_to(book.user) do %>
        <%= image_tag book_comment.user.get_profile_image, size: "100x100" %> <br>
        <%= book_comment.user.name %>
        <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <% if book_comment.user == current_user %>
    <td><%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger destroy_book", remote: true %></td>
    <% end %>
    </tr>
  </table>
  <% end %>
  <%= form_with model: [book, @book_comment], local: false do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
